# Copy this file to .env and adjust values for your environment

# Core
MONGO_URL=mongodb://localhost:27017/cafesmart
HMAC_SECRET=please-change-me-to-a-long-random-string
ADMIN_USERNAMES=admin@example.com

# Use in-memory store (no Mongo) for development/testing
# Valid truthy values: true, 1, yes (case-insensitive)
USE_TEST_STORE=false

# TLS (production mode only)
# Paths are resolved relative to the app working directory
# API_LOCAL_FULL_CHAIN=/certs/fullchain.pem
# API_LOCAL_PRIV_KEY=/certs/privkey.pem

# Metrics (optional)
CAFE_METRICS_COLLECTION=cafe_metrics
CAFE_METRICS_FLUSH_SECONDS=43200
CAFE_METRICS_MAX_BATCH=512
CAFE_METRICS_MAX_WRITE_BYTES=10000000
CAFE_METRICS_MAX_WRITE_COUNT=1000

# Test data generation (only used by TestableMongoStore)
SEED_TEST_DATA=false
DUMMY_DAYS_BACK=180
DUMMY_BASE_ORDERS_MIN=4
DUMMY_BASE_ORDERS_MAX=10
DUMMY_MAX_ITEMS_PER_ORDER=3

# Example log level for docker-compose (if you wire it up)
LOG_LEVEL=debug

